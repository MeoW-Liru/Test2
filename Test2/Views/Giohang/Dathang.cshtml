@using Test2.Models
@model List<Giohang>

@{
    ViewBag.Title = "Đặt hàng";
    Layout = "~/Views/_Layout2.cshtml";
}

<div class="cart-main-area pt-115 pb-120">
    <div class="container">
        <h3 class="cart-page-title">Giỏ hàng của bạn</h3>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="table-content table-responsive cart-table-content">
                    <table>
                        <thead>
                            <tr>
                                <th>Hình ảnh</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Giá</th>
                                <th>Số Lượng</th>
                                <th>Tổng Cộng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="product-thumbnail">
                                        <a><img src="~/images/CafeProduct/@item.sHinhAnh" width="200" alt=""></a>
                                    </td>
                                    <td class="product-name">
                                        @item.sTenSP
                                    </td>
                                    @using (Html.BeginForm("CapNhatGioHang", "Giohang", new { @sMaSP = item.sMaSP }))
                                    {
                                        <td class="product-price-cart"><span class="amount">@String.Format("{0:0,0}", item.dGiatien)</span></td>
                                        <td class="product-quantity pro-details-quality">
                                            @item.iSoluong
                                        </td>
                                        <td class="product-subtotal">@String.Format("{0:0,0}", item.dThanhtien)</td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="cart-shiping-update-wrapper">
                            <div class="cart-shiping-update">
                                <a href="~/Home/Index">Tiếp Tục Mua Sắm</a>
                            </div>
                            <div class="cart-clear">
                                <a href="@Url.Action("Giohang","Giohang")">Trở về giỏ hàng</a>
                            </div>
                        </div>
                    </div>
                </div>
                @{ KhachHang kh = (KhachHang)Session["UserName"];
                }
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)
                    <div class="col-lg-12 col-md-12">
                        <div class="grand-totall">
                            <div class="title-wrap">
                                <h4 class="cart-bottom-title section-bg-gary-cart">Thông tin đơn hàng</h4>
                            </div>
                            <div class="your-order-middle">
                                Họ tên: @kh.HoVaTen
                            </div>
                            <div class="your-order-middle">
                                Địa chỉ: @kh.DiaChi
                            </div>
                            <div class="your-order-middle">
                                Điện thoại: @kh.SDT
                            </div>
                            <div class="your-order-middle">
                                Ngày đặt hàng: @DateTime.Now.ToShortDateString()
                            </div>
                            <div class="your-order-middle">
                                Ngày giao:<input type="date" name="NgayGiao" required="" />
                            </div>
                            <div class="total-shipping">
                                <h5>Tổng sản phẩm: @ViewBag.Tongsoluong</h5>
                            </div>
                            <h4 class="grand-totall-title">Tổng thanh toán: <span>@String.Format("{0:0,0}", ViewBag.Tongtien) đ</span></h4>
                            <h4 class="grand-totall-title" >Thanh toán Online:<span> <a  style="padding:0px" href="@Url.Action("ThanhToanOnline", "Giohang")"> <img src="https://developers.momo.vn/v3/vi/img/logo2.svg" style="height:48px; width:48px;" /></a></span></h4>
                            <h4 class="grand-totall-title">Tổng thanh khi nhận hàng: <span> <input type="submit" class="btn btn-success" value="Đặt Hàng" /></span></h4>
                           

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>