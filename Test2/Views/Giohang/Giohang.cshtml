@using Test2.Models
@model List<Giohang> 
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/_Layout2.cshtml";
}
<div class="cart-main-area pt-115 pb-120">
    <div class="container">
        <h3 class="cart-page-title">Thông Tin Sản Phẩm </h3>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="table-content table-responsive cart-table-content">
                        <table>
                            <thead>
                                <tr>
                                    <th>Hình ảnh</th>
                                    <th>Tên Sản Phẩm</th>
                                    <th>Giá</th>
                                    <th>Số Lượng</th>
                                    <th>Tổng Cộng</th>
                                    <th>Hành Động</th>
                                    @*<th>Cập nhật</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td class="product-thumbnail">
                                        <a><img src="~/images/CafeProduct/@item.sHinhAnh" width="200" alt=""></a>
                                    </td>
                                    <td class="product-name">
                                        @item.sTenSP
                                    </td>
                                    @using (Html.BeginForm("CapNhatGioHang", "Giohang", new { @sMaSP = item.sMaSP }))
                                    {
                                        <td class="product-price-cart"><span class="amount">@String.Format("{0:0,0}", item.dGiatien)</span></td>
                                        <td class="product-quantity pro-details-quality">
                                            <input type="number" min="1" name="txtSoluong" value="@item.iSoluong">
                                        </td>
                                        <td class="product-subtotal">@String.Format("{0:0,0}", item.dThanhtien)</td>
                                        <td>
                                            @Html.ActionLink("Xóa", "XoaGiohang", new { @sMaSP = item.sMaSP })
                                            <input type="submit" class = "btn btn-default" value="Cập Nhật">
                                        </td>
                                    }
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="cart-shiping-update-wrapper">
                                <div class="cart-shiping-update">
                                    <a href="~/Home/Index">Tiếp Tục Mua Sắm</a>
                                </div>
                                <div class="cart-clear">
                                    <a href="@Url.Action("XoaTatcaGiohang","Giohang")">Xóa Giỏ Hàng</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12">
                        <div class="grand-totall">
                            @*<div class="title-wrap">
                                <h4 class="cart-bottom-title section-bg-gary-cart">Giỏ hàng</h4>
                            </div>*@
                            <div class="total-shipping">
                                <h5>Tổng sản phẩm : @ViewBag.Tongsoluong</h5>
                            </div>
                            <h4 class="grand-totall-title">Tổng tiền:<span>@String.Format("{0:0,0}", ViewBag.Tongtien) đ</span></h4>
                            @Html.ActionLink("Xác nhận","Dathang","Giohang")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

