@using Test2.Models
@using PagedList.Mvc;
@model PagedList.PagedList<SuKien>

<div class="blog-area pt-120 pb-120">
    <div class="container">
        <div class="row">
            @foreach (var sukien in Model)
            {
                if (sukien.Status == true)
                {
                <div class="col-lg-4 col-md-6 col-12 col-sm-6">
                    <div class="blog-wrap mb-40">
                        <div class="blog-img mb-20">
                            <a href="@Url.Action("ChitietBlog", "Home", new { id = sukien.MaSK })"><img src="~/images/BlogPicture/@sukien.HinhAnh"width="270" height="340" alt="blog-img"></a>
                        </div>
                        <div class="blog-content">
                            <div class="blog-meta">
                                <ul>
                                    <li>@*<a href="#">*@News @*</a>*@</li>
                                    <li>@sukien.NgayDang</li>
                                </ul>
                            </div>
                            <h1><a href="@Url.Action("ChitietBlog", "Home", new { id = sukien.MaSK })">@sukien.TieuDe</a></h1>
                        </div>
                    </div>
                </div>    
                }
            }
        </div>
    </div>
</div>