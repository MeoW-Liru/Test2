
@{
    ViewBag.Title = "Chi tiết Blog";
    Layout = "~/Views/_Layout2.cshtml";
}

<div class="blog-area pt-120 pb-120">
    <div class="container">
        <div class="row flex-row-reverse">
            <div class="col-lg-9">
                <div class="blog-details-wrapper">
                    <div class="blog-details-top">
                        @*Hình mẫu Bự*@
                        <div class="blog-details-img">
                            <img alt="" src="~/images/BlogPicture/@Model.HinhAnhTongQuat">
                        </div>
                        <div class="blog-details-content">
                            <div class="blog-meta-2">
                                <ul>
                                    <li>News</li>
                                    <li>@Model.NgayDang</li>
                                </ul>
                            </div>
                            <h1>@Model.TieuDe</h1>
                            @*Mô tả 1*@
                            <p>@Model.MoTa </p>
                            <blockquote>-------------------------------------------------------------------------------</blockquote>
                            @*Mô tả 2*@
                            <p>@Model.MoTaChiTiet</p>
                        </div>
                    </div>
                    @*Hình mẫu*@
                    <div class="dec-img-wrapper">
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-12">
                                <div class="dec-img mb-50">
                                    <img alt=""src="~/images/BlogPicture/@Model.HinhAnhChiTiet">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 col-12">
                                <div class="dec-img mb-50">
                                    <img alt=""src="~/images/BlogPicture/@Model.HinhAnhChiTietThem">
                                </div>
                            </div>
                        </div>
                        @*Mô tả 3*@
                        <p>@Model.MoTaThem</p>
                    </div>
                        <div class="blog-share">
                            <span>share :</span>
                            <div class="share-social">
                                <ul>
                                    <li>
                                        <a class="facebook" href="#">
                                            <i class="icon-social-facebook"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="twitter" href="#">
                                            <i class="icon-social-twitter"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="instagram" href="#">
                                            <i class="icon-social-instagram"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>