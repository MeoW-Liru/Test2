<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Bảng điều khiển</title>

    <!-- Core CSS - Include with every page -->
    <link href="~/css/plugins/pluginadmin/bootstrap.min.css" rel="stylesheet">
    <link href="~/fonts/fontadmin/css/font-awesome.css" rel="stylesheet" />
    <!-- Page-Level Plugin CSS - Dashboard -->
    <link href="~/css/plugins/pluginadmin/morris/morris-0.4.3.min.css" rel="stylesheet" />
    <link href="~/css/plugins/pluginadmin/timeline/timeline.css" rel="stylesheet" />
    <!-- SB Admin CSS - Include with every page -->
    <link href="~/css/plugins/pluginadmin/sb-admin.css" rel="stylesheet" />

    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>

    <div id="wrapper">

        <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="BangDieuKhien">Cafe Team - Bảng Điều Khiển</a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <li>
                    <a href="~/Home/Index"><i class="fa fa-home fa-fw"></i> Trang chủ</a>
                </li>
                <li class="dropdown ">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>
                        @{
                            var user = HttpContext.Current.Session["UserName"].ToString();
                            <span>@user</span>
                        }
                    </a>
                </li>
                <li>
                    @Html.ActionLink("Đăng xuất", "DangXuat", "Admin")
                </li>
            </ul>

            <div class="navbar-default navbar-static-side" role="navigation">
                <div class="sidebar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Tìm kiếm...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </li>
                        <li>
                            <a href="~/Admin/Cafe"><i class="fa fa-dashboard fa-fw"></i> Bảng Quản Lí Cà Phê</a>
                        </li>
                        <li>
                            <a href="~/Admin/DonHang"><i class="fa fa-edit fa-fw"></i> Bảng Quản Lí Đơn Hàng </a>
                        </li>
                        <li>
                            <a href="~/Admin/BlogList"><i class="fa fa-edit fa-fw"></i> Bảng Quản Lí Blog </a>
                        </li>
                        <li>
                            <a href="~/Admin/ListLoaiSP"><i class="fa fa-edit fa-fw"></i> Bảng Quản Lí Loại Sản phẩm </a>
                        </li>
                        <li>
                            <a href="~/Admin/QuanLyKH"><i class="fa fa-edit fa-fw"></i> Danh sách khách hàng</a>
                        </li>
                        <li>
                            <a href="~/Admin/DoanhThu"><i class="fa fa-edit fa-fw"></i> Danh Thu Theo Ngày</a>
                        </li>
                        <li>
                            <a href="~/Admin/View"><i class="fa fa-edit fa-fw"></i> Tạo mới</a>
                        </li>
                        <li>
                            <a href="~/Admin/Table"><i class="fa fa-table fa-fw"></i> Dữ liệu</a>
                        </li>
                    </ul>
                    <!-- /#side-menu -->
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <!-- Core Scripts - Include with every page -->
        <script src="~/js/plugins/pluginadmin/jquery-1.10.2.js"></script>
        <script src="~/js/plugins/pluginadmin/bootstrap.min.js"></script>
        <script src="~/js/plugins/pluginadmin/metisMenu/jquery.metisMenu.js"></script>

        <!-- Page-Level Plugin Scripts - Dashboard -->
        <script src="~/js/plugins/pluginadmin/morris/raphael-2.1.0.min.js"></script>
        <script src="~/js/plugins/pluginadmin/morris/morris.js"></script>

        <!-- SB Admin Scripts - Include with every page -->
        <script src="~/js/plugins/pluginadmin/sb-admin.js"></script>

        <!-- Page-Level Demo Scripts - Dashboard - Use for reference -->
        <script src="~/js/plugins/pluginadmin/dashboard-demo.js"></script>

    </div>
    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
    @RenderSection("upload", required: false)
</body>
</html>
